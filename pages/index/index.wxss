page{
  color: #666;
  padding: 10rpx;
}
.nav{
  padding: 5rpx 0;
  white-space: nowrap;
}
.nav_item{
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav_item.active{
  border-bottom: 5rpx solid pink;
}
.slides{
  margin-top: 10rpx 
}
.slides swiper{
  height: 240rpx;
}

.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}

.video_warp{
display: flex;
flex-wrap:wrap;
padding: 5rpx;
justify-content: space-between;
}
.video_item{
  flex: 0 0 48%;
  margin-bottom: 20rpx;
}
.video_img{
  position: relative;
}
.video_img image{
width: 100%;
border-radius: 15rpx;
}
.video_img .video_info{
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 29rpx;
}
.video_title{
  font-size: 28rpx;
  overflow: hidden;
  white-space:normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  line-clamp: 2;
  box-orient:vertical;
}